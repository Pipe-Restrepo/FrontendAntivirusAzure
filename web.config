<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="build/server/index.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <rewrite>
      <rules>
        <!-- Archivos estáticos -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(build/client/.*|favicon\.ico)$" />
          <action type="Rewrite" url="{R:0}" />
        </rule>
        
        <!-- Todas las demás rutas van al servidor -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true"/>
          </conditions>
          <action type="Rewrite" url="build/server/index.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <iisnode 
      node_env="production"
      nodeProcessCommandLine="node"
      interceptor="build/server/index.js"
      watchedFiles="web.config;*.js"
      loggingEnabled="true"
      logDirectory="iisnode"
      debuggingEnabled="false"
      devErrorsEnabled="false"
    />
    
    <!-- Habilitar logs detallados para debugging -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>